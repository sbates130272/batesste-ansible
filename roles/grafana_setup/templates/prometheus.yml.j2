# Prometheus configuration
# Deployed by Ansible - grafana_setup role

global:
  scrape_interval: 15s
  evaluation_interval: 15s
  external_labels:
    monitor: 'grafana-setup-monitor'

# Alertmanager configuration
alerting:
  alertmanagers:
    - static_configs:
        - targets: []

# Load rules once and periodically evaluate them
rule_files: []

# Scrape configurations
scrape_configs:
  # Prometheus itself
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:{{ grafana_setup_prometheus_port }}']
        labels:
          instance: 'prometheus'
          group: 'monitoring'

  # Node Exporter - Local system metrics
  - job_name: 'node_exporter'
    static_configs:
      - targets: ['localhost:{{ grafana_setup_node_exporter_port }}']
        labels:
          instance: '{{ ansible_hostname }}'
          group: 'nodes'
{% if grafana_verified_exporter_targets is defined and grafana_verified_exporter_targets | length > 0 %}
      # Discovered node exporters on the network
{% for target in grafana_verified_exporter_targets %}
      - targets: ['{{ target }}:{{ grafana_setup_node_exporter_port }}']
        labels:
          instance: '{{ target }}'
          group: 'nodes'
          discovered: 'true'
{% endfor %}
{% endif %}

  # Grafana metrics
  - job_name: 'grafana'
    static_configs:
      - targets: ['localhost:{{ grafana_setup_port }}']
        labels:
          instance: 'grafana'
          group: 'monitoring'

{% if grafana_verified_amd_gpu_targets is defined and grafana_verified_amd_gpu_targets | length > 0 %}
  # AMD Device Metrics Exporters (https://github.com/ROCm/device-metrics-exporter)
  - job_name: 'amd_gpu'
    static_configs:
{% for target in grafana_verified_amd_gpu_targets %}
      - targets: ['{{ target }}:{{ grafana_setup_amd_gpu_exporter_port }}']
        labels:
          instance: '{{ target }}'
          group: 'gpus'
          discovered: 'true'
{% endfor %}
{% endif %}
