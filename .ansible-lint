---
# .ansible-lint
# See https://ansible-lint.readthedocs.io/configuring/

exclude_paths:
  - .github

warn_list:
  - command-instead-of-module
  - command-instead-of-shell
  - meta-no-info
  - name[template]
  - no-changed-when
  - role-name
  - var-naming[no-role-prefix]
  - jinja[invalid]

extra_vars:
  targets: localhost
