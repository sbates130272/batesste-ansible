---
# .ansible-lint
# See https://ansible-lint.readthedocs.io/configuring/

exclude_paths:
  - .github
  - playbooks/hosts-example.yml

warn_list:
  - command-instead-of-module
  - command-instead-of-shell
  - meta-no-info
  - name[template]
  - no-changed-when
  - role-name
  - schema[meta]  # Ubuntu noble not yet in ansible-lint schema
  - var-naming[no-role-prefix]

extra_vars:
  targets: localhost
